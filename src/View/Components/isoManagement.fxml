<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-padding: 25; -fx-background-color: #CEDEC9; -fx-border-color: #505C4C;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    
    <!-- Top: Title and Search Bar -->
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #253320;" text="Gestion des Normes ISO" />
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="searchBar" prefHeight="29.0" prefWidth="222.0" promptText="Rechercher..." style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #619E4F; -fx-padding: 5;" />
                <Button fx:id="searchButton" style="-fx-background-color: #619E4F; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Rechercher" />
            </HBox>
        </VBox>
    </top>

    <!-- Center: ISO Norms List -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2B3329;" text="Liste des Normes ISO" />
            <ListView fx:id="isoListView" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #619E4F; -fx-padding: 10;" />
        </VBox>
    </center>

    <!-- Bottom: Action Buttons -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 15;">
            <Button fx:id="addIsoButton" style="-fx-background-color: #6BDB48; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Ajouter ISO" />
            <Button fx:id="editIsoButton" style="-fx-background-color: #619E4F; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Modifier ISO" />
            <Button fx:id="deleteIsoButton" style="-fx-background-color: #505C4C; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Supprimer ISO" />
        </HBox>
    </bottom>
</BorderPane>
