    <!-- Center: Profile Details -->
    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 30;">
            <ImageView fx:id="profileImage" fitHeight="200" fitWidth="200" style="-fx-border-color: #505C4C; -fx-border-radius: 100; -fx-background-radius: 100; -fx-background-color: #F4F4F4;" />

            <GridPane alignment="CENTER" hgap="20" style="-fx-padding: 20;" vgap="20">
                <Label style="-fx-text-fill: #2B3329;" text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0">
               <font>
                  <Font name="Sora Medium" size="18.0" />
               </font></Label>
                <TextField fx:id="nomField" editable="false" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #619E4F; -fx-background-color: #CEDEC9;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label style="-fx-text-fill: #2B3329;" text="Prénom :" GridPane.columnIndex="0" GridPane.rowIndex="1">
               <font>
                  <Font name="Sora Medium" size="18.0" />
               </font></Label>
                <TextField fx:id="prenomField" editable="false" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #619E4F; -fx-background-color: #CEDEC9;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label style="-fx-text-fill: #2B3329;" text="Poste :" GridPane.columnIndex="0" GridPane.rowIndex="2">
               <font>
                  <Font name="Sora Medium" size="18.0" />
               </font></Label>
                <TextField fx:id="posteField" editable="false" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #619E4F; -fx-background-color: #CEDEC9;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </VBox>
    </center>

    <!-- Bottom: Action Buttons -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <Button fx:id="backButton" style="-fx-background-color: #505C4C; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Retour" />
        </HBox>
    </bottom>
</BorderPane>
