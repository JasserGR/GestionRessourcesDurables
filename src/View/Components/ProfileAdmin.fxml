<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700" prefWidth="774" style="-fx-background-color: #FFFFFF; -fx-border-color: #505C4C;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <!-- Top: Title -->
    <top>
        <Label alignment="CENTER" prefHeight="53.0" prefWidth="772.0" style="-fx-text-fill: #FFFFFF; -fx-background-color: #589D43;" text="Détails du Profil">
         <font>
            <Font name="Sora ExtraBold" size="20.0" />
         </font></Label>
