<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="185.0" prefWidth="389.0" spacing="15" style="-fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="View.Components.AddUserPopupController">
    <TextField fx:id="Nom" layoutX="30.0" layoutY="30.0" promptText="Nom" />
    <PasswordField fx:id="password" layoutX="30.0" layoutY="30.0" promptText="Password" />
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label style="-fx-font-size: 14; -fx-text-fill: #2B3329;" text="Poste" />
        <ComboBox fx:id="typeComboBox" style="-fx-background-radius: 10; -fx-border-radius: 10; " />
    </HBox>
    
    <Button fx:id="addButton" style="-fx-background-color: #6BDB48; -fx-text-fill: white; -fx-font-weight: bold;" text="Ajouter" />
</VBox>
