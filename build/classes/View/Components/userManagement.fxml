<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="800" style="-fx-padding: 25; -fx-background-color: #CEDEC9; -fx-border-color: #505C4C;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <!-- Top: Title -->
    <top>
        <Label alignment="CENTER" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #253320; -fx-padding: 20;" text="Gestion des Utilisateurs" />
    </top>

    <!-- Center: User Management Table -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <TableView fx:id="userTable" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #619E4F;">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Nom" />
                    <TableColumn fx:id="prenomColumn" text="Prénom" />
                    <TableColumn fx:id="roleColumn" text="Rôle" />
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="editUserButton" style="-fx-background-color: #619E4F; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Modifier" />
                <Button fx:id="deleteUserButton" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Supprimer" />
            </HBox>
        </VBox>
    </center>

    <!-- Bottom: Action Buttons -->
    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            <Button fx:id="addUserButton" style="-fx-background-color: #6BDB48; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Ajouter Utilisateur" />
            <Button fx:id="backButton" style="-fx-background-color: #505C4C; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Retour" />
        </HBox>
    </bottom>
</BorderPane>
