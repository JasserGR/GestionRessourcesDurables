<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="700.0" prefWidth="774.0" style="-fx-background-color: #ffffff; -fx-border-color: #505C4C;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.Components.UserManagementController">
    <!-- Top: Title -->
    <top>
        <Label alignment="CENTER" prefHeight="80.0" prefWidth="798.0" style="-fx-text-fill: #ffffff; -fx-padding: 20; -fx-background-color: #589D43;" text="Gestion des Utilisateurs">
         <font>
            <Font name="Sora ExtraBold" size="20.0" />
         </font></Label>
    </top>

    <!-- Center: User Management Table -->
    <center>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="485.0" prefWidth="773.0" spacing="20" style="-fx-padding: 20;">
            <TableView fx:id="userTable" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #619E4F;">
                <columns>
                    <TableColumn fx:id="nameColumn" style="-fx-background-color: #CEDEC9;" text="Nom" />
                    <TableColumn fx:id="prenomColumn" style="-fx-background-color: #CEDEC9;" text="Prénom" />
                    <TableColumn fx:id="roleColumn" style="-fx-background-color: #CEDEC9;" text="Rôle" />
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="editUserButton" style="-fx-background-color: #619E4F; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Modifier" />
                <Button fx:id="deleteUserButton" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Supprimer" />
            </HBox>
        </VBox>
    </center>

    <!-- Bottom: Action Buttons -->
    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            <Button fx:id="addUserButton" style="-fx-background-color: #6BDB48; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Ajouter Utilisateur" />
            <Button fx:id="backButton" style="-fx-background-color: #505C4C; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="Retour" />
        </HBox>
    </bottom>
</BorderPane>
